@{
    ViewData["Title"] = "ProductCategoryList";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}
@section scripts
{
    <script src="~/manager/scripts/productcategotylist.js" asp-append-version="true"></script>
}

<div class="pcoded-main-container company-report">
    <div class="pcoded-wrapper">
        <div class="pcoded-content">
            <div class="pcoded-inner-content">
                <!-- [ breadcrumb ] start -->
                <div class="page-header">
                    <div class="page-block">
                        <div class="row align-items-center">
                            <div class="col-md-12">
                                <div class="page-header-title">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- [ breadcrumb ] end -->
                <div class="main-body">
                    <div class="page-wrapper">
                        <!-- [ Main Content ] start -->
                        <div class="row">
                            <!-- [ fixed-menu ] start -->
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="panel panel-default panel-toggled">
                                        <div class="card-header filter-header" id="headingTwo" data-toggle="collapse" data-target="#collapseTwo">
                                            <h5 class="mb-0">Advance filter - Product Category</h5>
                                            <i class="collapsed fa fa-angle-down float-right" aria-expanded="false" aria-controls="collapseTwo"></i>
                                        </div>

                                        <div id="collapseTwo" class="collapse card-body" aria-labelledby="headingTwo" data-parent="#accordionExample">
                                            <div class="form-group row">
                                                <label class="col-sm-1"></label>
                                                <label class="col-sm-2">Name</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" id="txtName" />
                                                </div>
                                                <div class="col-sm-2"></div>
                                            </div>

                                            <div class="form-group row">
                                                <label class="col-sm-1"></label>
                                                <label class="col-sm-2">Is Available</label>
                                                <div class="col-sm-8">
                                                    <select asp-items="@(new SelectList(ViewBag.IsAvailable,"Value", "Text"))" id="ddlIsAvailable" class="form-control" style="width:100%!important"></select>
                                                </div>
                                                <div class="col-sm-2"></div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-1"></label>
                                                <label class="col-sm-2"></label>
                                                <div class="col-sm-8">
                                                    <button type="button" id="ProductCategorySearch" class="btn btn-primary">Search</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Product Category</h5>
                                        <div class="card-header-right">
                                            <div class="btn-group card-option">
                                                <a href="@Url.Action("AddEditProductCategory","ProductCategory")" class="btn btn-primary">Add</a>
                                                <button type="button" class="btn dropdown-toggle btn-icon" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <i class="feather icon-more-horizontal"></i>
                                                </button>
                                                <ul class="list-unstyled card-option dropdown-menu dropdown-menu-right">
                                                    <li class="dropdown-item full-card"><a href="javascript:"><span><i class="feather icon-maximize"></i> maximize</span><span style="display:none"><i class="feather icon-minimize"></i> Restore</span></a></li>
                                                    <li class="dropdown-item minimize-card"><a href="javascript:"><span><i class="feather icon-minus"></i> collapse</span><span style="display:none"><i class="feather icon-plus"></i> expand</span></a></li>
                                                    <li class="dropdown-item close-card"><a href="javascript:"><i class="fas fa-eye-slash"></i> hide</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-block report-block">
                                        <div class="table-responsive">
                                            <table id="ProductCategoryList" class="display table nowrap table-striped table-hover table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>#ID</th>
                                                        <th>Name</th>
                                                        <th>Available</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <!-- [ fixed-menu ] end -->
                            </div>
                            <!-- [ Main Content ] end -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="confirmDeleteProductCategoryModal" tabindex="-1" role="dialog" aria-labelledby="CompanyModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <input type="hidden" id="ProductCategoryId" value="" />
                <h5 class="modal-title" id="CompanyModalLabel">
                    Are you sure to delete this Product category?
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        &times;
                    </span>
                </button>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="DeleteProductCategory()">
                    Yes
                </button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">
                    No
                </button>
            </div>
        </div>
    </div>
</div>